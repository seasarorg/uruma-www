<?xml version="1.0" encoding="UTF-8"?>
<template xmlns="http://s2jface.sandbox.seasar.org">
  <window id="search" style="TITLE, CLOSE, PRIMARY_MODAL" title="従業員検索"
    image="title" defaultButtonId="ok" defaultFocusId="empno">
    <gridLayout numColumns="1">
      <gridData horizontalAlignment="FILL" />
    </gridLayout>
    <composite>
      <gridLayout numColumns="2">
        <gridData horizontalAlignment="FILL" />
      </gridLayout>
      <label text="従業員No." />
      <text id="empno" />
      <label text="従業員名" />
      <text id="ename" />
      <label text="役職" />
      <text id="job" />
      <label text="管理者No." />
      <text id="mgr" />
      <label text="管理者名" />
      <text id="mname" />
      <label text="雇用日" />
      <composite>
        <gridLayout numColumns="3" marginWidth="0" marginHeight="0" />
        <text id="fromHiredate" />
        <label text="～" />
        <text id="toHiredate" />
      </composite>
      <label text="給与" />
      <composite>
        <gridLayout numColumns="3" marginWidth="0" marginHeight="0" />
        <text id="fromSal" />
        <label text="～" />
        <text id="toSal" />
      </composite>
      <label text="部署" />
      <combo id="dept" style="DROP_DOWN, READ_ONLY" />
    </composite>
    <composite>
      <fillLayout type="HORIZONTAL" />
      <button id="ok" text="OK" />
      <button id="cancel" text="キャンセル" />
    </composite>
  </window>
</template>
