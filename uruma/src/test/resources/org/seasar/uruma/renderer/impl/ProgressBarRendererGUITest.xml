<?xml version="1.0" encoding="UTF-8"?>
<template xmlns="http://uruma.sandbox.seasar.org">
  <window id="progressBarRendererGUITest" title="ProgressBarRendererGUITest">
    <gridLayout numColumns="1">
      <gridData horizontalAlignment="FILL" />
    </gridLayout>

    <composite id="contents">
      <gridData horizontalAlignment="FILL" />
      <rowLayout type="HORIZONTAL" marginWidth="10" marginHeight="10"
        spacing="10">
      </rowLayout>
      <commonAttributes fontHeight="20" />

      <progressBar minimum="0" maximum="100" selection="10" toolTipText="ツールチップ\nテキスト" />

      <progressBar style="VERTICAL" minimum="0" maximum="100" selection="20" />

      <progressBar style="VERTICAL, SMOOTH" minimum="0" maximum="100" selection="66" foreground="BLUE"/>
    </composite>

    <label style="SEPARATOR, HORIZONTAL" />

    <composite>
      <fillLayout type="HORIZONTAL" spacing="5" />

      <button id="okButton" text="OK"></button>
      <button id="ngButton" text="NG"></button>
    </composite>
  </window>
</template>
