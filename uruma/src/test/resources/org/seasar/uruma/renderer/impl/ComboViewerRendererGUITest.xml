<?xml version="1.0" encoding="UTF-8"?>
<template xmlns="http://uruma.sandbox.seasar.org">
  <window id="comboViewerRendererGUITest" title="ComboViewerRendererGUITest" defaultButtonId="okButton">
    <gridLayout numColumns="1">
      <gridData horizontalAlignment="FILL" />
    </gridLayout>

    <composite id="contents">
      <gridData horizontalAlignment="FILL" />
      <rowLayout type="HORIZONTAL" marginWidth="10" marginHeight="10"
        spacing="10">
      </rowLayout>
      <commonAttributes fontHeight="20" />

      <combo>
        <item text="Item1-1" />
        <item text="Item1-2" />
        <item text="Item1-3" />
      </combo>

      <combo style="DROP_DOWN" text="Input" textLimit="7">
        <item text="Item2-1" />
        <item text="Item2-2" />
        <item text="Item2-3" />
      </combo>

      <combo style="READ_ONLY" visibleItemCount="2">
        <item text="Item3-1" />
        <item text="Item3-2" />
        <item text="Item3-3" />
      </combo>
      
      <combo style="DROP_DOWN" orientation="RIGHT_TO_LEFT">
        <item text="Item4-1" />
        <item text="Item4-2" />
        <item text="Item4-3" />
      </combo>

    </composite>

    <label style="SEPARATOR, HORIZONTAL" />

    <composite>
      <fillLayout type="HORIZONTAL" spacing="5" />

      <button id="okButton" text="OK"></button>
      <button id="ngButton" text="NG"></button>
    </composite>
  </window>
</template>
