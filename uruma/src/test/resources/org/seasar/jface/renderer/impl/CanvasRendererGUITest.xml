<?xml version="1.0" encoding="UTF-8"?>
<template xmlns="http://s2jface.sandbox.seasar.org">
  <window id="canvasRendererGUITest" title="CanvasRendererGUITest"
    defaultButtonId="okButton">
    <gridLayout numColumns="1">
      <gridData horizontalAlignment="FILL" />
    </gridLayout>
    <composite id="contents">
      <gridData horizontalAlignment="FILL" />
      <rowLayout type="VERTICAL" marginWidth="10" marginHeight="10"
        spacing="10">
      </rowLayout>
      <commonAttributes fontHeight="20" />

      <canvas id="canvas" style="BORDER" toolTipText="ツールチップ\nテキスト">
        <rowData width="200" height="100"/>
      </canvas>

    </composite>

    <label style="SEPARATOR, HORIZONTAL" />

    <composite>
      <fillLayout type="HORIZONTAL" spacing="5" />

      <button id="okButton" text="OK"></button>
      <button id="ngButton" text="NG"></button>
    </composite>
  </window>
</template>
