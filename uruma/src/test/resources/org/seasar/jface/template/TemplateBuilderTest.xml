<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE template PUBLIC "-//SEASAR//DTD S2JFace 0.1//EN"
	"http://www.seasar.org/dtd/s2jface01.dtd">
<template name="testTemplate">
  <window id="testApp" layout="row"
    layoutParam="type=HORIZONTAL; marginHeight=10; marginWidth=10; spacing=10">
    <property name="title">テストアプリケーション</property>
    <property name="width">50%</property>
    <property name="height">50%</property>
    <property name="x">center</property>
    <property name="y">middle</property>
    <property name="image">container.gif</property>

    <control id="testButton" type="button">
      <property name="x">10</property>
      <property name="y">10</property>
      <property name="width">100</property>
      <property name="height">20</property>
      <property name="text">テストボタン1</property>
    </control>

    <control id="testButton2" type="button">
      <property name="x">130</property>
      <property name="y">30</property>
      <property name="width">100</property>
      <property name="height">50</property>
      <property name="text">テストボタン2</property>
    </control>

    <control id="testButton3" type="button">
      <property name="x">130</property>
      <property name="y">30</property>
      <property name="width">50</property>
      <property name="height">50</property>
      <property name="text">テストボタン3</property>
      <property name="enabled">true</property>
      <property name="visible">true</property>
    </control>

    <composite type="box" layout="fill" layoutParam="type=VERTICAL">
      <control type="label">
        <property name="width">100</property>
        <property name="height">30</property>
        <property name="text">テストラベル</property>
        <property name="foregroundColor">#FF0000</property>
        <property name="backgroundColor">blue</property>
        <property name="toolTip">ツールチップ</property>
        <property name="fontSize">20</property>
      </control>

      <control type="label">
        <property name="text">テストラベル2</property>
        <property name="font">ＭＳ 明朝</property>
        <property name="fontStyle">BOLD, ITALIC</property>
        <property name="fontSize">64</property>
      </control>

    </composite>

    <control type="text">
      <property name="text">テストテキスト</property>
      <property name="textLimit">30</property>
    </control>

    <control type="textArea">
      <property name="text">テストテキスト</property>
      <property name="textLimit">30</property>
    </control>

  </window>
</template>
