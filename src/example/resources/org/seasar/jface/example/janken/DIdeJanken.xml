<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE template PUBLIC "-//SEASAR//DTD S2JFace 0.1//EN" 
	"http://www.seasar.org/dtd/s2jface01.dtd">
<template name="DIdeJanken">
  <window id="janken" layout="grid" layoutParam="numColumns=3">
    <property name="title">DIでジャンケン</property>
    <property name="image">container.gif</property>

    <property name="backgroundColor">white</property>
    <property name="foregroundColor">black</property>
    <property name="fontSize">50</property>
    <property name="alignment">CENTER</property>

    <layoutData name="horizontalAlignment" inheritance="descendantOnly">FILL</layoutData>
    
    <control type="label">
      <property name="text">コンピュータ</property>
    </control>
    <composite type="box" />
    <control type="label">
      <property name="text">あなた</property>
    </control>

    <control type="label" id="computerWinLabel">
      <property name="text">0 勝</property>
    </control>
    <composite type="box" />
    <control type="label" id="playerWinLabel">
      <property name="text">0 勝</property>
    </control>

    <control type="label" id="computerHandImage">
      <property name="image">blank</property>
    </control>
    <control type="label">
      <layoutData name="verticalalAlignment">TOP</layoutData>
      <layoutData name="grabExcessHorizontalSpace">true</layoutData>
      <property name="text">vs</property>
      <property name="fontsize">100</property>
    </control>
    <control type="label" id="playerHandImage">
      <property name="image">blank</property>
    </control>

    <control type="label" id="messageLabel">
      <layoutData name="horizontalSpan">3</layoutData>
      <property name="text">じゃんけん・・・</property>
    </control>

    <composite type="box" layout="fill"
      layoutParam="spacing=20; marginWidth=20">
      <layoutData name="horizontalSpan">3</layoutData>

      <control type="button" id="guButton">
        <property name="text">グー！</property>
      </control>
      <control type="button" id="cyokiButton">
        <property name="text">チョキ！</property>
      </control>
      <control type="button" id="paButton">
        <property name="text">パー！</property>
      </control>
    </composite>

  </window>
</template>
