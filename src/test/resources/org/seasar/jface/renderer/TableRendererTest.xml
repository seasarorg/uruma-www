<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE template PUBLIC "-//SEASAR//DTD S2JFace 0.1//EN" 
	"http://www.seasar.org/dtd/s2jface01.dtd">
<template name="tableRendererTest">
  <window id="tableRendererTest" title="tableRendererTest" x="center"
    y="middle" minButton="false" maxButton="false" closeButton="false"
    resizable="false" layout="grid" layoutParam="numColumns=1">
    <property name="defaultButton">okButton</property>

    <composite type="box" layout="row"
      layoutParam="type=HORIZONTAL; marginHeight=10; marginWidth=10; spacing=10">
      <layoutData name="horizontalAlignment">FILL</layoutData>

      <control type="table" style="BORDER">
        <property name="width">200</property>
        <property name="height">100</property>
        <property name="header">head1, head2, head3</property>
        <item>column1, column2, column3</item>
        <item>column4, column5, column6</item>
      </control>
    </composite>

    <control type="label" style="SEPARATOR, HORIZONTAL">
      <layoutData name="horizontalAlignment">FILL</layoutData>
    </control>

    <composite type="box" layout="fill"
      layoutParam="type=HORIZONTAL; spacing=5">
      <layoutData name="horizontalAlignment">FILL</layoutData>
      <control type="button" id="okButton">
        <property name="text">OK</property>
      </control>
      <control type="button" id="ngButton">
        <property name="text">NG</property>
      </control>
    </composite>

  </window>
</template>
