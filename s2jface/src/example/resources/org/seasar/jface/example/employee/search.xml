<?xml version="1.0" encoding="UTF-8"?>
<template xmlns="http://s2jface.sandbox.seasar.org">
  <window id="search" style="TITLE, CLOSE, PRIMARY_MODAL" title="従業員検索"
    image="images/title.gif" defaultButtonId="ok">
    <gridLayout numColumns="1">
      <gridData horizontalAlignment="FILL" />
    </gridLayout>
    <composite>
      <gridLayout numColumns="2">
        <gridData horizontalAlignment="FILL" />
      </gridLayout>
      <label text="従業員No." />
      <text id="empNo" />
      <label text="従業員名" />
      <text id="empName" />
      <label text="役職" />
      <text id="job" />
      <label text="管理者" />
      <text id="manager" />
      <label text="雇用日" />
      <composite>
        <gridLayout numColumns="3" marginWidth="0" marginHeight="0" />
        <text id="hireDateGt" />
        <label text="～" />
        <text id="hireDateLt" />
      </composite>
      <label text="給与" />
      <composite>
        <gridLayout numColumns="3" marginWidth="0" marginHeight="0" />
        <text id="salaryGt" />
        <label text="～" />
        <text id="salaryLt" />
      </composite>
      <label text="部署" />
      <combo id="department" style="DROP_DOWN, READ_ONLY" />
    </composite>
    <composite>
      <fillLayout type="HORIZONTAL" />
      <button id="ok" text="OK" />
      <button id="cancel" text="キャンセル" />
    </composite>
  </window>
</template>
