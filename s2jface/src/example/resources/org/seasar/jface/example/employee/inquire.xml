<?xml version="1.0" encoding="UTF-8"?>
<template xmlns="http://s2jface.sandbox.seasar.org">
  <!-- TODO 継承を使ってregistと共有する -->
  <window id="inquire" style="TITLE, CLOSE, PRIMARY_MODAL" title="従業員情報"
    image="title" defaultButtonId="ok" defaultFocusId="ename">
    <gridLayout numColumns="1">
      <gridData horizontalAlignment="FILL" />
    </gridLayout>
    <composite>
      <gridLayout numColumns="2">
        <gridData horizontalAlignment="FILL" />
      </gridLayout>
      <label text="従業員No." />
      <text id="empno" editable="false" />
      <label text="従業員名" />
      <text id="ename" editable="false" />
      <label text="役職" />
      <text id="job" editable="false" />
      <label text="管理者" />
      <text id="mgr" editable="false" />
      <label text="雇用日" />
      <text id="hiredate" editable="false" />
      <label text="給与" />
      <text id="sal" editable="false" />
      <label text="Commission" />
      <text id="comm" editable="false" />
      <label text="部署" />
      <text id="dname" editable="false" />
    </composite>
    <composite>
      <fillLayout type="HORIZONTAL" />
      <button id="ok" text="OK" />
    </composite>
  </window>
</template>
