<?xml version="1.0" encoding="UTF-8"?>
<template xmlns="http://uruma.sandbox.seasar.org">
  <window id="sliderRendererGUITest" title="SliderRendererGUITest" defaultButtonId="okButton">
    <gridLayout numColumns="1">
      <gridData horizontalAlignment="FILL" />
    </gridLayout>

    <composite id="contents">
      <gridData horizontalAlignment="FILL" />
      <rowLayout type="HORIZONTAL" marginWidth="10" marginHeight="10"
        spacing="10">
      </rowLayout>
      <commonAttributes fontHeight="20" />

      <slider minimum="0" maximum="100" selection="10"
        toolTipText="ツールチップ\nテキスト" increment="5" />

      <slider style="VERTICAL" minimum="0" maximum="100" selection="20"
        increment="1" pageIncrement="10" background="BLUE" />

      <slider style="VERTICAL" minimum="0" maximum="100" selection="66"
        increment="10" pageIncrement="20" thumb="20" />
        
    </composite>

    <label style="SEPARATOR, HORIZONTAL" />

    <composite>
      <fillLayout type="HORIZONTAL" spacing="5" />

      <button id="okButton" text="OK"></button>
      <button id="ngButton" text="NG"></button>
    </composite>
  </window>
</template>
