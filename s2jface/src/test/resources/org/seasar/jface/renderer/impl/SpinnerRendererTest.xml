<?xml version="1.0" encoding="UTF-8"?>
<template xmlns="http://s2jface.sandbox.seasar.org">
  <window id="spinnerRendererTest" title="SpinnerRendererTest"
    defaultButtonId="okButton">
    <gridLayout numColumns="1">
      <gridData horizontalAlignment="FILL" />
    </gridLayout>

    <composite id="contents">
      <gridData horizontalAlignment="FILL" />
      <rowLayout type="HORIZONTAL" marginWidth="10" marginHeight="10"
        spacing="10">
      </rowLayout>
      <commonAttributes fontHeight="20" />

      <spinner minimum="0" maximum="100" selection="10"
        toolTipText="ツールチップ\nテキスト" increment="5" />

      <spinner style="BORDER, VERTICAL" minimum="0" maximum="100" selection="20"
        increment="1" pageIncrement="10" background="BLUE" />

      <spinner style="BORDER, VERTICAL" minimum="0" maximum="100" selection="66"
        increment="10" pageIncrement="20" digits="2" />

      <spinner style="BORDER, READ_ONLY" minimum="0" maximum="100"
        selection="50" toolTipText="読み取り専用" />

      <spinner minimum="0" maximum="100" selection="10"
        fontStyle="ITALIC, BOLD" />
    </composite>

    <label style="SEPARATOR, HORIZONTAL" />

    <composite>
      <fillLayout type="HORIZONTAL" spacing="5" />

      <button id="okButton" text="OK"></button>
      <button id="ngButton" text="NG"></button>
    </composite>
  </window>
</template>
