<?xml version="1.0" encoding="UTF-8"?>
<template xmlns="http://s2jface.sandbox.seasar.org">
  <window id="tableEnabledDependBinderTest" title="TableEnabledDependBinderTest"
    defaultButtonId="okButton">
    <gridLayout numColumns="1">
      <gridData horizontalAlignment="FILL" />
    </gridLayout>

    <menu>
      <menuItem text="選択時Enable" enabledDependId="table"
        enabledDependType="SELECTION" />
      <menuItem text="非選択時Enable" enabledDependId="table"
        enabledDependType="NONE" />
      <menuItem text="１つだけ選択時Enable" enabledDependId="table"
        enabledDependType="SINGLE" />
      <menuItem text="２つだけ選択時Enable" enabledDependId="table"
        enabledDependType="PAIR" />
      <menuItem text="２つ以上選択時Enable" enabledDependId="table"
        enabledDependType="MULTI" />
    </menu>

    <toolBar>
      <toolItem text="選択時Enable" enabledDependId="table"
        enabledDependType="SELECTION" />
      <toolItem text="非選択時Enable" enabledDependId="table"
        enabledDependType="NONE" />
      <toolItem text="１つだけ選択時Enable" enabledDependId="table"
        enabledDependType="SINGLE" />
      <toolItem text="２つだけ選択時Enable" enabledDependId="table"
        enabledDependType="PAIR" />
      <toolItem text="２つ以上選択時Enable" enabledDependId="table"
        enabledDependType="MULTI" />
    </toolBar>

    <composite id="contents">
      <gridData horizontalAlignment="FILL" />
      <rowLayout type="VERTICAL" marginWidth="10" marginHeight="10"
        spacing="10">
      </rowLayout>
      <commonAttributes fontHeight="10" />

      <table id="table" style="BORDER, MULTI" headerVisible="true">
        <tableColumn id="column1" text="カラム１" width="60" />
        <tableColumn id="column2" text="カラム２" width="60" />
      </table>

      <button id="addItemButton" text="アイテム追加" />
      <button id="removeAllButton" text="アイテム全削除" />
      <button id="nullButton" text="イベントリスナの呼び出しのみ" />

    </composite>

    <label style="SEPARATOR, HORIZONTAL" />

    <composite>
      <fillLayout type="HORIZONTAL" spacing="5" />

      <button id="okButton" text="OK"></button>
      <button id="ngButton" text="NG"></button>
    </composite>
  </window>
</template>
