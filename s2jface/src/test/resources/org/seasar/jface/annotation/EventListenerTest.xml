<?xml version="1.0" encoding="UTF-8"?>
<template name="eventListenerTest" xmlns="http://s2jface.sandbox.seasar.org">
  <window id="eventListenerTest" title="EventListenerTest" height="400"
    width="600">
    <gridLayout numColumns="1" />

    <composite>
      <gridLayout numColumns="3">
        <gridData grabExcessVerticalSpace="true" verticalAlignment="FILL" />
      </gridLayout>
      <gridData horizontalAlignment="FILL" verticalAlignment="FILL" />

      <button id="button" text="button">
        <gridData grabExcessHorizontalSpace="true" horizontalAlignment="FILL"
          grabExcessVerticalSpace="true" verticalAlignment="FILL" />
      </button>
      <label id="mouseLabel" style="BORDER" text="listen Mouse events" />
      <text id="text" style="MULTI"
        text="Text
          and
          MouseWheel" />
    </composite>

    <label style="SEPARATOR, HORIZONTAL">
      <gridData horizontalAlignment="FILL" />
    </label>

    <text id="eventLog" style="MULTI">
      <gridData grabExcessHorizontalSpace="true" horizontalAlignment="FILL"
        grabExcessVerticalSpace="true" verticalAlignment="FILL" />
    </text>
  </window>
</template>
